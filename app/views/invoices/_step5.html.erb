<div class="container">
  <%= turbo_frame_tag "step5_frame" do %>  
    <div class="row">
      <div class="col-md-7">
        <embed src="<%= url_for(@invoice.pdf) %>" width="100%" height="600px" type="application/pdf">
      </div>

      <div class="col-md-5">
        <div class="wrap">
          <p class="title">All Done. Thank you!</p>
          <div class="next_btn_wrap">
            <button id="refresh-button" class="btn btn-primary"><- Go To First Step</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
